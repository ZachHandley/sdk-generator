import os
import mimetypes
from typing import Optional

class InputFile:
    @classmethod
    def from_path(cls, path: str) -> 'InputFile':
        instance: 'InputFile' = cls()
        instance.path: str = path
        instance.filename: str = os.path.basename(path)
        instance.mime_type: Optional[str] = mimetypes.guess_type(path)[0]
        instance.source_type: str = 'path'
        return instance

    @classmethod
    def from_bytes(cls, bytes: bytes, filename: Optional[str] = None, mime_type: Optional[str] = None) -> 'InputFile':
        instance: 'InputFile' = cls()
        instance.data: bytes = bytes
        instance.filename: Optional[str] = filename
        instance.mime_type: Optional[str] = mime_type
        instance.source_type: str = 'bytes'
        return instance
